<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 말풍선의 바탕 색상 -->
    <solid android:color="#FFC107" />

    <!-- 말풍선 테두리의 두께와 색상 -->
    <stroke
        android:width="2dp"
        android:color="#FF9800" />

    <!-- 말풍선 모서리의 라운딩 -->
    <corners android:radius="12dp" />

    <!-- 패딩 설정 -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="4dp"
        android:bottom="4dp" />

    <!-- 그림자 설정 -->
    <item>
        <shape>
            <solid android:color="#80000000" />
            <corners android:radius="12dp" />
        </shape>
    </item>

</shape>
