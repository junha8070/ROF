<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Base.Theme.Xlnt_TimeLine" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="android:statusBarColor">@color/background_color</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="bottomSheetDialogTheme">@style/RoundCornerBottomSheetDialogTheme</item>
    </style>

    <style name="RoundCornerBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundCornerModalStyle</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="RoundCornerModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/style_bottom_sheet</item>
        <item name="backgroundTint">@color/bottomSheetBackground_dark</item>
    </style>

    <style name="chip_calendar" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@drawable/style_night_calendar_chip</item>
        <item name="android:textColor">@drawable/style_night_calendar_chip_text</item>
    </style>
</resources>