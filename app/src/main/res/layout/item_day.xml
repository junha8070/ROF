<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:clickable="false"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_status"
        android:layout_width="24dp"
        app:strokeWidth="0dp"
        android:layout_height="24dp"
        android:gravity="center_horizontal"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/transparent"
        app:layout_constraintEnd_toEndOf="@+id/cg_day"
        app:layout_constraintStart_toStartOf="@+id/cg_day"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/iv_status_top"
                android:layout_width="match_parent"
                app:cardBackgroundColor="@color/transparent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="0dp"
                app:strokeWidth="0dp">

                <ImageView
                    android:padding="0dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:alpha="0.8"
                    android:rotation="135"
                    android:scaleY="2"
                    android:layout_marginLeft="1dp"
                    android:scaleX="2"
                    android:scaleType="centerInside"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:tint="@color/ready_gray"
                    android:src="@drawable/b2"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/iv_status_middle"
                android:layout_width="match_parent"
                app:cardBackgroundColor="@color/transparent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="0dp"
                app:strokeWidth="0dp">

                <ImageView
                    android:padding="0dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:rotation="225"
                    android:scaleY="2"
                    android:layout_marginLeft="7dp"
                    android:alpha="0.8"
                    android:scaleX="2"
                    android:scaleType="centerInside"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:tint="@color/onGoing_green"
                    android:src="@drawable/b2"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/iv_status_end"
                android:layout_width="match_parent"
                app:cardBackgroundColor="@color/transparent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="0dp"
                app:strokeWidth="0dp">

                <ImageView
                    android:padding="0dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:scaleY="2"
                    android:layout_marginTop="6dp"
                    android:alpha="0.8"
                    android:layout_marginLeft="4dp"
                    android:scaleX="2"
                    android:scaleType="centerInside"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/b2"
                    app:tint="@color/finish_blue" />

            </com.google.android.material.card.MaterialCardView>

        </FrameLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.chip.Chip
        android:id="@+id/cg_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        app:chipStrokeWidth="0dp"
        android:checkable="true"
        app:chipCornerRadius="0dp"
        android:gravity="center"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mcv_status" />



</androidx.constraintlayout.widget.ConstraintLayout>
